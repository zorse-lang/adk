{
  "compilerOptions": {
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@zorse/adk/core": ["src/core"],
      "@zorse/adk/core/*": ["src/core/*"],
      "@zorse/adk/local": ["src/local"],
      "@zorse/adk/local/*": ["src/local/*"],
      "@zorse/adk/cloud": ["src/cloud"],
      "@zorse/adk/cloud/*": ["src/cloud/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
