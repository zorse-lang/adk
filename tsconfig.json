{
  "compilerOptions": {
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@zorse/adk/core": ["src/core"],
      "@zorse/adk/core/*": ["src/core/*"],
      "@zorse/adk/scenes": ["src/scenes"],
      "@zorse/adk/scenes/*": ["src/scenes/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
